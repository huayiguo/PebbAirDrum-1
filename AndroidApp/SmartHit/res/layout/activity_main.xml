<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background = "@drawable/bg"
    tools:context="hackathon.smarthit.Main" >
	

    <ImageButton
    	android:id="@+id/Start"
    	android:layout_width="50dp"
   		android:layout_height="50dp"
   		android:scaleType="fitCenter"
    	android:src="@drawable/record"
    	android:background="@null"></ImageButton>
    
    <ImageButton
    	android:id="@+id/Stop"
    	android:layout_width="50dp"
   		android:layout_height="50dp"
   		android:scaleType="fitCenter"
    	android:src="@drawable/stop"
    	android:layout_toRightOf="@id/Start"
    	android:layout_alignBottom="@id/Start"
    	android:background="@null"></ImageButton>
    
    <ImageButton
    	android:id="@+id/Play"
    	android:layout_width="50dp"
   		android:layout_height="50dp"
   		android:scaleType="fitCenter"
    	android:src="@drawable/play"
    	android:layout_toRightOf="@id/Stop"
    	android:layout_alignBottom="@id/Stop"
    	android:background="@null"></ImageButton>
	
    <ImageButton
	    android:id="@+id/gong"
	    android:layout_width="200dp"
	    android:layout_height="380dp"
	    android:layout_marginTop="290dp"
	    android:layout_marginLeft="70dp"
	    android:src="@drawable/gong"
	    android:background="@null"
	    android:scaleType="fitCenter" 
	   />
    
    
	<ImageButton
    	android:id="@+id/drum"
    	android:layout_width="100dp"
   		android:layout_height="100dp"
   		android:layout_marginTop="420dp"
		android:layout_marginLeft="180dp"
   		android:scaleType="fitCenter"
    	android:src="@drawable/realdrum"
    	android:background="@null"></ImageButton>
	
	<ImageButton
    	android:id="@+id/drum1"
    	android:layout_width="100dp"
   		android:layout_height="100dp"
   		android:layout_alignBottom="@id/drum"
		android:layout_marginLeft="320dp"
   		android:scaleType="fitCenter"
    	android:src="@drawable/realdrum"
    	android:background="@null"></ImageButton>
	
	<ImageButton
    	android:id="@+id/drum2"
    	android:layout_width="100dp"
   		android:layout_height="100dp"
   		android:layout_below="@id/drum"
		android:layout_marginLeft="40dp"
   		android:scaleType="fitCenter"
    	android:src="@drawable/realdrum"
    	android:background="@null"></ImageButton>
	
	<ImageButton
    	android:id="@+id/drum3"
    	android:layout_width="100dp"
   		android:layout_height="100dp"
   		android:layout_below="@id/drum1"
		android:layout_marginLeft="450dp"
   		android:scaleType="fitCenter"
    	android:src="@drawable/realdrum"
    	android:background="@null"></ImageButton>

	<ImageButton
	    android:id="@+id/Start_back"
    	android:layout_width="50dp"
   		android:layout_height="50dp"
   		android:scaleType="fitCenter"
    	android:src="@drawable/play"
    	android:layout_alignParentRight="true"
    	android:layout_alignBottom="@id/Start"
    	android:background="@null"></ImageButton>
	
	
	<ImageButton
	    android:id="@+id/Stop_back"
    	android:layout_width="50dp"
   		android:layout_height="50dp"
   		android:scaleType="fitCenter"
    	android:src="@drawable/stop"
    	android:layout_toLeftOf="@id/Start_back"
    	android:layout_alignBottom="@id/Start_back"
    	android:background="@null"></ImageButton>
	    
	
	
</RelativeLayout>


